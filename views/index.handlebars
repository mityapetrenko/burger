<div class="container">
<div class="jumbotron">
  <h1 class="display-4"> <i class="fas fa-hamburger"></i> Fancy Burgers</h1>
  </div>

<div class="row">
<div class="col-lg-4" id="waiting">
  <h2 class="waiting">Awaiting to be eaten:</h2>
  <ul>
    {{#each burger}}
    {{#unless devoured}}
    <li class="waiting">{{burger_name}}</li>
    <button class="devour-burger" data-id="{{this.id}}">Nam Nam Nam</button>
    {{/unless}}
    {{/each}}
  </ul>
</div>
<div class="col-lg-4" id="add-burger">
  <h2>Create your burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burger">Create a burger you want to eat</label>
      <input type="text" id="burger" name="name">
    </div>

    <button type="submit">Add your burger</button>
  </form>
</div>
<div class="col-lg-4" id="eaten">
  <h2>Burgers you devoured</h2>

  <ul>
    {{#each burger}}

    {{#if devoured}}

    <li class="eaten">{{burger_name}}</li>
    {{/if}}
    {{/each}}
  </ul>
</div>

</div>
</div>